{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "parser": "babel-eslint",
    "rules": {
        "indent": [
            "error",
            4
        ],
        "no-underscore-dangle": "off",
        "import/no-extraneous-dependencies": 0,
        "func-names": [
            "error",
            "never"
        ],
        "camelcase": [
            "error",
            {
                "properties": "never",
                "ignoreDestructuring": true
            }
        ],
        "no-plusplus": [
            "error",
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "class-methods-use-this": 0,
        "max-len": [
            "error",
            {
                "code": 120,
                "ignoreComments": true
            }
        ]
    }
}